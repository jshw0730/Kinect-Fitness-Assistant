<Window x:Class="KinectStreams.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Kinect | Fitness Assistant " Height="480" Width="1000" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Image Name="camera" Margin="0,0,-0.4,0.4" />
        <Canvas Name="canvas" Margin="-10,50,9.6,10.4" >

        </Canvas>
        <TextBlock x:Name="Timestamp"
        		Text="0"
        		FontSize="30"
        		Foreground="Black"
        		Background="Yellow"
        		HorizontalAlignment="Left"
        		VerticalAlignment="Top"
        		Opacity="0.0" Height="50" Width="59" Canvas.Left="83" Canvas.Top="-33" Margin="250,0,0,0"/>
        <TextBlock x:Name="count"
        		Text="count : 0"
        		FontSize="30"
        		Foreground="Black"
        		Background="Yellow"
        		HorizontalAlignment="Left"
        		VerticalAlignment="Top"
        		Opacity="1.0" Canvas.Left="1334" Canvas.Top="-144" Height="50" Width="172"/>
        <Grid Style="{StaticResource GridButtonsStyle}">
            <StackPanel Style="{StaticResource StackPanelButtonsStyle}" Margin="134,0,121.6,5" Width="738">
                <Button Content="Color" Style="{StaticResource ButtonStyle}" Click="Color_Click" />
                <Button Content="Depth" Style="{StaticResource ButtonStyle}" Click="Depth_Click" />
                <Button Content="Infrared" Style="{StaticResource ButtonStyle}" Click="Infrared_Click" />
                <Button Content="Body" Style="{StaticResource ButtonStyle}" Click="Body_Click" />
                <Button Content="Coord" Style="{StaticResource ButtonStyle}" Click="Coord_Click" />
                <Button Content="Degree" Style="{StaticResource ButtonStyle}" Click="Degree_Click" />
            </StackPanel>
        </Grid>
        <TextBlock x:Name="GestureNotifier"
        	Text="0"
        	FontSize="30"
        	Foreground="Black"
        	Background="Yellow"
        	HorizontalAlignment="Left"
        	VerticalAlignment="Top"
        	Opacity="0.0" Height="50" Width="322" Margin="339,0,0,0"/>
        <TextBlock x:Name="motionA"
        	Text="0"
        	FontSize="30"
        	Foreground="Black"
        	Background="Yellow"
        	HorizontalAlignment="Left"
        	VerticalAlignment="Top"
        	Opacity="0.0" Height="50" Width="52" Margin="740,0,0,0"/>
        <TextBlock x:Name="motionB"
        	Text="0"
        	FontSize="30"
        	Foreground="Black"
        	Background="Yellow"
        	HorizontalAlignment="Left"
        	VerticalAlignment="Top"
        	Opacity="0.0" Height="50" Width="52" Margin="818,0,0,0"/>
        <TextBlock x:Name="motionF"
        	Text="0"
        	FontSize="30"
        	Foreground="Black"
        	Background="Yellow"
        	HorizontalAlignment="Left"
        	VerticalAlignment="Top"
        	Opacity="0.0" Height="50" Width="52" Margin="902,0,0,0"/>
    </Grid>
</Window>
